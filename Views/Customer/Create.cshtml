@model WattsFlowProject.ViewModels.PostCustomerViewModel

@{
    ViewBag.Title = "إضافة زبون جديد";
}
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/css/log.css" asp-append-version="true" />
<script src="~/js/main.js"></script>
<div class="expense-container">

    <form asp-action="Create" method="post" class="expense-form">
        <h2 class="expense-heading">إضافة زبون جديد</h2>

        @if (ViewBag.ErrorMessage != null)
        {
            <div class="expense-alert">
                @ViewBag.ErrorMessage
            </div>
        }

        <div class="form-group">
            <label asp-for="FirstName" class="expense-label">الاسم الأول</label>
            <input asp-for="FirstName" class="expense-input" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="FatherName" class="expense-label">اسم الأب</label>
            <input asp-for="FatherName" class="expense-input" />
            <span asp-validation-for="FatherName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="LastName" class="expense-label">اسم العائلة</label>
            <input asp-for="LastName" class="expense-input" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="PhoneNumber" class="expense-label">رقم الهاتف</label>
            <input asp-for="PhoneNumber" class="expense-input" type="tel" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Address" class="expense-label">العنوان</label>
            <input asp-for="Address" class="expense-input" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Building" class="expense-label">المبنى</label>
            <input asp-for="Building" class="expense-input" />
            <span asp-validation-for="Building" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Floor" class="expense-label">الطابق</label>
            <input asp-for="Floor" class="expense-input" />
            <span asp-validation-for="Floor" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Side" class="expense-label">الجهة</label>
            <input asp-for="Side" class="expense-input" />
            <span asp-validation-for="Side" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="PostId" class="form-label">رقم العلبة</label>
            <select asp-for="PostId" class="form-control" asp-items="Model.posts">
                <option value="">-- اختر رقم العلبة --</option>
            </select>
            <span asp-validation-for="PostId" class="text-danger"></span>
        </div>



        <div class="form-group">
            <label asp-for="CircuitBreakerPower" class="expense-label">قوة القاطع الكهربائي</label>
            <input asp-for="CircuitBreakerPower" class="expense-input" type="number" step="0.1" min="0.1" />
            <span asp-validation-for="CircuitBreakerPower" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="FixedPayment" class="expense-label">الدفع الثابت</label>
            <input asp-for="FixedPayment" class="expense-input" type="number" step="0.01" min="0.01" />
            <span asp-validation-for="FixedPayment" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="IsActive" class="expense-label">نشط؟</label>
            <input type="hidden" asp-for="IsActive" value="false" />  
            <input asp-for="IsActive" type="checkbox" value="true" />  
            <span asp-validation-for="IsActive" class="text-danger"></span>
        </div>


        <button type="submit" class="expense-button">حفظ</button>
    </form>
</div>
<div class="button-left" style="text-align: left; margin-top: 30px;">
    <a asp-controller="Customer" asp-action="Index" class="btn btn-primary">الرجوع إلى الزبائن</a>
</div>